@model List<Vacation.Models.Cart>

<div>
    <div class="modal fade" id="shopping" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                    <h3>Giỏ hàng</h3>
                </div>
                @if (Model.Count > 0)
                {
                <div class="modal-body">
                    @foreach (var item in Model)
                    {
                    <li class="list-group-item">
                        <strong>@item.Tour.Name</strong>
                        <span class="badge"><input type="text" class="quantity" data-id="@item.Tour.Id" value="@item.Quatity" /></span>
                        <span class="label label-success">@(item.Tour.Price * item.Quatity) VNĐ</span>
                        <span><a href="#" data-id="@item.Tour.Id" class="btn-delete">Xóa</a></span>
                    </li>}
                </div>
                <div class="row">
                    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
                        <div class="form-group">
                            <button id="btnUpdate" class="btn">Cập nhập giỏ hàng</button>
                            <button id="btnDelete" class="btn">Xóa</button>
                            <button id="btnCheckout" class="btn">Thanh toán</button>
                        </div>
                        <strong>
                            Total: @(Model.Sum(x => x.Tour.Price * x.Quatity))
                            VNĐ
                        </strong>
                    </div>
                </div>}
                else
                {
                <span>Chưa có sản phâm cho giỏ hàng</span>}
            </div>
        </div>
    </div>
</div>

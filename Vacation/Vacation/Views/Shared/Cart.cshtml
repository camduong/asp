@model List<Vacation.Models.Cart>

<div>
		<div class="modal fade" id="shopping" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
				<div class="modal-dialog" role="document" style="width: 750px">
					<div class="modal-content">
						<div class="modal-header">
							<button class="close" type="button" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
							<h1 class="text-center">Giỏ hàng</h1>
						</div>
						@if (Model.Count > 0)
						{
						<div class="modal-body">
							@foreach (var item in Model)
							{
							<li class="list-group-item">
								<div class="row" style="margin: 0.75rem 0;">
									<div class="col-md-4">
										<h3 style="margin: 0;">@item.Tour.Name</h3>
									</div>
									<div class="col-md-7 text-center">
										<input type="text" class="quantity text-center" data-id="@item.Tour.Id" value="@item.Quatity" size="1" /><span> vé x @String.Format("{0:0,0}", @item.Tour.Price) VNĐ = </span>
										<span class="label label-success" style="font-size: 100%;">@String.Format("{0:0,0}", (@item.Tour.Price * @item.Quatity)) VNĐ</span>
									</div>
									<div class="col-md-1 text-center">
										<a href="#" data-id="@item.Tour.Id" class="btn btn-danger btn-delete" style="padding: 2px 12px">X</a>
									</div>
								</div>
							</li>
							}
						</div>
						<hr />
						<div class="row" style="margin: 2rem;">
							<div class="col-md-6 form-group text-center">
								<button id="btnDelete" class="btn btn-danger">Xóa</button>
								<button id="btnUpdate" class="btn btn-primary">Cập nhập giỏ hàng</button>
								<button id="btnCheckout" class="btn btn-success">Thanh toán</button>
							</div>
							<div class="col-md-6 text-center">
								<h3>
									<strong>Tổng tiền: @String.Format("{0:0,0}", @Model.Sum(@x => @x.Tour.Price * @x.Quatity)) VNĐ</strong>
								</h3>
							</div>

						</div>}
						else
						{
						<h3 class="text-center" style="margin-bottom: 1.5rem ">Chưa có sản phâm cho giỏ hàng</h3>}
					</div>

				</div>
		</div>
</div>

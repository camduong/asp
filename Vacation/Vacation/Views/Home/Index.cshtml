                                    }
                                </select>
                                <select class="selectpicker input-group col-xs-4" data-live-search='true' , name='noiden' , title='Nơi đến'>
                                    @foreach (var item in Model)
                                    {
                                    <option data-tokens="@item.Id" , value="~/tour/name=@item.Slug">@item.Name</option>
                                    }
                                </select>
                            </form>
                        </div>
                    </div>

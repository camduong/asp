@section scripts
{
    <script type="text/javascript" src="~/Scripts/js/moment.js"></script>
    <script type="text/javascript" src="~/Scripts/js/datepicker.min.js"></script>
    <script type="text/javascript">
        $('#datepicker.date').datepicker({
            format: "dd/mm/yyyy",
            weekStart: 0,
            startView: 0,
            maxViewMode: 1,
            autoclose: true,
            todayHighlight: true,
            startDate:"-infinity",
            endDate: "+6m",
            todayBtn: "linked",
        });
        $('.offer').parallax("50%", -0.04);
        $(document).ready(function(){
            $('.bxslider').bxSlider({
                speed: 800,
                auto: true,
                hideControlOnEnd: true,
                controls: true,
                slideWidth: 400,
                minSlides: 2,
                maxSlides: 3,
                slideMargin: 10
            });
        });
        $('.selectpicker').selectpicker({
            style: 'btn-default',
            size: 3
        });
        $('.selectpicker').on('changed.bs.select', function (e) {
            var picker = $(this).val();
            window.location.href = picker;
        });
    </script>
}